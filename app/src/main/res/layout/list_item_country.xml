<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">


    <LinearLayout
        android:id="@+id/viewCard_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_bg">

        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginBottom="@dimen/dimen_2dp"
            android:layout_marginStart="@dimen/dimen_3dp"
            android:layout_marginEnd="@dimen/dimen_3dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="@dimen/dimen_2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_15dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dimen_10dp"
                        android:layout_marginTop="@dimen/dimen_20dp"
                        android:layout_weight="0.1">

                        <com.stootie.task.view.CircleImageView
                            android:id="@+id/country_flag_iv"
                            android:layout_width="@dimen/dimen_50dp"
                            android:layout_height="@dimen/dimen_50dp"
                            android:src="@mipmap/app_ic"
                             />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/main_layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2.9"
                        android:orientation="vertical">



                        <TextView
                            android:id="@+id/country_name_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_30dp"
                            android:layout_marginEnd="@dimen/dimen_15dp"
                            android:layout_marginStart="@dimen/dimen_15dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/googlesans_bold"
                            android:maxLines="2"
                            android:text="@string/text_name_test"
                            android:textColor="@color/black"
                            android:textSize="@dimen/dimen_20sp"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/country_region_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_0dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/googlesans_medium"
                            android:maxLines="1"
                            android:textAlignment="center"
                            android:text="@string/test_region_text"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/dimen_13sp"
                            android:visibility="visible" />


                    </LinearLayout>


                </LinearLayout>



            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>


</LinearLayout>